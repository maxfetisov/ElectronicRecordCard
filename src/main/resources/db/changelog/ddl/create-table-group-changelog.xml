<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="310320240058" author="fetisov">
        <createTable tableName="student_group">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="varchar(50)"/>
            <column name="admission_date" type="date"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="institute_id" type="smallint">
                <constraints foreignKeyName="fk_group_institute" references="institute(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>