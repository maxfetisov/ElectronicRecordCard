<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="140420240155" author="fetisov">
        <createTable tableName="user_subject_control_type">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="teacher_id" type="bigint">
                <constraints
                        foreignKeyName="fk_student_mark_teacher"
                        references="user(id)"
                        nullable="false"
                />
            </column>
            <column name="student_id" type="bigint">
                <constraints
                        foreignKeyName="fk_student_mark_student"
                        references="user(id)"
                        nullable="false"
                />
            </column>
            <column name="subject_id" type="bigint">
                <constraints
                        foreignKeyName="fk_student_mark_subject"
                        references="subject(id)"
                        nullable="false"
                />
            </column>
            <column name="control_type_id" type="smallint">
                <constraints
                        foreignKeyName="fk_student_mark_control_type"
                        references="control_type(id)"
                        nullable="false"
                />
            </column>
            <column name="semester" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="hours_number" type="smallint"/>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint
                tableName="user_subject_control_type"
                columnNames="student_id, teacher_id, subject_id"
        />
    </changeSet>
</databaseChangeLog>